extends layout

block header

block content
    nav.navbar.navbar-toggleable-md.navbar-light.bg-faded
        span.navbar-brand Personal Calendar

        div#navbarNav.collapse.navbar-collapse
            a.undecorated.btn.btn-default.navbar-text.navbar-right(href='/auth/logout')
                span.fa.fa-sign-out(aria-hidden="true")
                span(style='padding-left: 3px;') Logout
            span.navbar-text User: #{user.local.email}

    div#scheduler_here.dhx_cal_container(style='width:100%; height:80%;')
        div.dhx_cal_navline
            div.dhx_cal_prev_button &nbsp;
            div.dhx_cal_next_button &nbsp;
            div.dhx_cal_today_button
            div.dhx_cal_date
            div.dhx_cal_tab(name='day_tab', style='right:204px')
            div.dhx_cal_tab(name='week_tab', style='right:140px')
            div.dhx_cal_tab(name='month_tab', style='right:76px')
        div.dhx_cal_header
        div.dhx_cal_data